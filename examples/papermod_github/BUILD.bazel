load("@rules_hugo//hugo:rules.bzl", "hugo_config", "hugo_serve", "hugo_site", "hugo_theme")

hugo_theme(
    name = "theme",
    srcs = [
        "@hugo_papermod_theme_github//:files",
    ],
    theme_name = "PaperMod",
)

hugo_config(
    name = "config",
    src = "config.toml",
)

hugo_site(
    name = "site",
    config = ":config",
    content = glob(["content/**"]),
    layouts = glob(["layouts/**"]),
    static = glob(["static/**"]),
    theme = ":theme",
)

hugo_serve(
    name = "serve",
    dep = [":site"],
)

sh_test(
    name = "site_test",
    srcs = ["site_test.sh"],
    data = [":site"],
)
